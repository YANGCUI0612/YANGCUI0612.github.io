---
import PageLayout from '@/layouts/CommonPage.astro'
import { Card } from 'astro-pure/user'
import { Image } from 'astro:assets'

import TMDULogo from '@/assets/TMDU.png'
import ECUSTLogo from '@/assets/ECUST.png'
import UTLogo from '@/assets/UT.png'
---

<PageLayout title='Experience'>
  <div class="flex flex-col gap-6">
      {/* University of Tokyo */}
      <Card
        class="relative overflow-hidden rounded-2xl bg-gray-100 text-gray-900 w-full text-left"
      >
        {/* 水印校徽 */}
        <Image
          src={UTLogo}
          alt="UT logo"
          class="pointer-events-none absolute right-3 top-1/2 -translate-y-1/2 w-1/2 h-auto object-contain opacity-20"
          loading="eager"
        />

        <div class="relative pb-2">
          <h3 class="text-2xl font-bold text-black">
            <a
              href="https://www.u-tokyo.ac.jp/en/"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-block text-black transition-colors transition-transform duration-200 transform hover:scale-[1.01] hover:text-primary"
            >
              University of Tokyo
            </a>
          </h3>
          <p class="mt-2 mb-1 block font-semibold text-black">Ph.D. in Bioinformatics</p>
          <p class="">Department of Computational Biology and Medical Sciences</p>
          <a
            href="https://fais.hgc.jp/"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block transition-colors duration-200 hover:text-primary hover:font-semibold"
          >
            Laboratory of Functional Analysis in Silico
          </a>
          <p class="">Supervised by Professor Kenta Nakai</p>
          <p class="mt-2 text-sm text-black">April 2022 – March 2025</p>
        </div>
      </Card>
    
      {/* Tokyo Medical and Dental University */}
      <Card
        class="relative overflow-hidden rounded-2xl bg-gray-100 text-gray-900 w-full text-left"
      >
        {/* 水印校徽 */}
        <Image
          src={TMDULogo}
          alt="TMDU logo"
          class="pointer-events-none absolute right-3 top-1/2 -translate-y-1/2 w-1/2 h-auto object-contain opacity-20"
          loading="eager"
        />

        <div class="relative pb-2">
          <h3 class="text-2xl font-bold text-black">
            <a
              href="https://www.tmd.ac.jp/english/"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-block text-black transition-colors transition-transform duration-200 transform hover:scale-[1.01] hover:text-primary"
            >
              Tokyo Medical and Dental University
            </a>
          </h3>
          <span class="block text-sm font-normal text-gray-500">(now Institute of Science Tokyo)</span>
          <p class="mt-2 mb-1 block font-semibold text-black">Master in Immunology</p>
          <p class="">Graduate School of Medical and Dental Sciences</p>
          <a
            href="https://www.tmd.ac.jp/imm/english/"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block transition-colors duration-200 hover:text-primary hover:font-semibold"
          >
            Department of Immunology
          </a>
          <p class="">Supervised by Professor Takeshi Tsubata</p>
          <p class="mt-2 text-sm text-black">April 2020 – March 2022</p>
        </div>
      </Card>
    
      {/* East China University of Science and Technology */}
      <Card
        class="relative overflow-hidden rounded-2xl bg-gray-100 text-gray-900 w-full text-left"
      >
        {/* 水印校徽 */}
        <Image
          src={ECUSTLogo}
          alt="ECUST logo"
          class="pointer-events-none absolute right-3 top-1/2 -translate-y-1/2 w-1/2 h-auto object-contain opacity-20"
          loading="eager"
        />

        <div class="relative pb-2">
          <h3 class="text-2xl font-bold">
            <a
              href="https://www.ecust.edu.cn/en/"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-block text-black transition-colors transition-transform duration-200 transform hover:scale-[1.01] hover:text-primary"
            >
              East China University of Science and Technology
            </a>
          </h3>
          <p class="mt-2 mb-1 block font-semibold text-black">Bachelor in Biotechnology</p>
          <p class="text-black">School of Bioengineering</p>
          <p class="text-black">Department of Biotechnology</p>
          <p class="mt-2 text-sm text-black">September 2013 – June 2017</p>
        </div>
      </Card>
  </div>
</PageLayout>
